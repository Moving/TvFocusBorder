<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.owen.widget.TvHorizontalScrollView
        android:id="@+id/scroll_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:hsv_scroller_duration="700"
        app:hsv_selected_offset_end="30dp"
        app:hsv_selected_offset_start="30dp"
        app:hsv_is_selected_centered="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="30dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:orientation="horizontal">

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_1"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="280dp"
                app:rfl_radius="0dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_2"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="20dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_3"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="280dp"
                app:rfl_radius="40dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_4"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="60dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_5"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="90dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_6"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="280dp"
                app:rfl_radius="0dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_7"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="20dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_8"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="40dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_9"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="60dp"
                android:background="#ed3"/>

            <com.owen.widget.RoundFrameLayout
                android:id="@+id/round_frame_layout_10"
                android:layout_marginLeft="20dp"
                android:focusable="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:rfl_radius="90dp"
                android:background="#ed3"/>

        </LinearLayout>

    </com.owen.widget.TvHorizontalScrollView>

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        android:id="@+id/list"
        app:layout_constraintTop_toBottomOf="@id/scroll_view_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="30dp"
        android:orientation="horizontal"
        app:tv_layoutManager="V7LinearLayoutManager"
        tools:listitem="@layout/item_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>